html
    head
        title ReSpot
        link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", rel="stylesheet", integrity="sha256-7s5uDGW3AHqw6xtJmNNtr+OBRJUlgkNJEo78P4b0yRw= sha512-nNo+yCHEyn0smMxSswnf/OnX6/KwJuZTlNZBjauKhTK0c+zT+q5JOCx0UFhXQ6rJR9jg6Es8gPuD2uZcYDLqSw==", crossorigin="anonymous")
        link(rel='stylesheet', href='/stylesheets/style.css')
        script(src="https://code.jquery.com/jquery-latest.min.js")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js", integrity="sha256-KXn5puMvxCw+dAYznun+drMdG1IFl3agK0p/pqT9KAo= sha512-2e8qq0ETcfWRI4HJBzQiA3UoyFk6tbNyG+qSaIBZLyW9Xf3sWZHN/lxe9fTh1U45DpPf07yj94KsUHHWe4Yk1A==", crossorigin="anonymous")
    body
        if error 
            h1 An Error has occured. 
            h2 #{error}
            
        else
          h1 ReSpot
          p Welcome to ReSpot
          if user
            p Greetings #{user.username}
            
            ul
              each val in user.decks
                li(class="deck-container")
                  p Name(#{val.name})
                  p Description(#{val.description})
                  p Review(#{user.srs[val._id].length})
                  form(action="/deck/add/"+val._id)
                    input(type="submit" value="Add cards")
                  form(action="/deck/delete")
                    input(type="submit" value="Delete")
            p
              form(action="/deck/new")
                input(type="submit" value="Create a Deck")
            
          else
              a(Class="btn btn-primary" href="user/login") Login
              //-because I'm a pleb and I don't want to add CSS for this for now.
              br
              br
              a(Class="btn btn-primary" href="user/register") Register
              