div(class="modal fade", id="new-deck-modal", tabindex="-1", role="dialog", style="display: none;")
    div.modal-dialog
        div.formmodal-container
            h1 Create a new Deck.
            form(name="newDeck", action="/deck/new", method="post")
                input(type='text', name='name', placeholder="Name of Deck" required)
                textarea(name='description', placeholder="Description" required)
                input(type='submit', value="Create", name="createDeck" class="form formmodal-submit")